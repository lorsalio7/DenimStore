include ../mixins/_variables.pug

block vars
  - var pageTitle = "Main title";
  - var htmlClass = "";
  - var bodyClass = "";

block mixins
  include ../mixins/_site-navigation.pug
  include ../mixins/_site-footer-navigation.pug
  include ../mixins/_socials-link.pug
  include ../mixins/_products-card.pug

doctype html
html(lang="en" class= htmlClass).full-height
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= pageTitle
    link(rel="shortcut icon" href="img/favicon.ico")
    block styles
      link(rel="stylesheet", href="css/styles.min.css")
  body(class= bodyClass).full-height
    .wrapper
      include ../sections/_header.pug
      block content
      include ../sections/_footer.pug

    block scripts
      script(src="js/script.min.js")
