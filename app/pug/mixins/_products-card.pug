mixin products-card(array)
  each item in array
    li.products__card.products-card
      a(href= item.productUrl).products-card__link
        img(src= item.productImage width="270" height="349", alt= item.productTitle).products-card__image
      .products-card__text
        h3.products-card__title= item.productTitle
        if item.productPrice
          p.products-card__price= item.productPrice

